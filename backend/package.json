{
  "name": "race-stats-backend",
  "version": "1.0.0",
  "description": "Race Management System Backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc --watch",
    "typeorm": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d src/shared/database/Database.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d src/shared/database/Database.ts",
    "migration:show": "npm run typeorm migration:show -- -d src/shared/database/Database.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/shared/database/Database.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.5.4"
  },
  "packageManager": "yarn@1.22.22"
}
